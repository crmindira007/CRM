        <tr data-status="new" data-url="./dashboard.html">
            <td><input type="checkbox" class="checkbox"></td>
            <td class="text-blue-600">Nina Thomson</td>
            <td><span class="status-badge status-new">National Lumber</span></td>
            <td class="text-gray-500">+10794476017</td>
            <td class="text-gray-500">ninathomson@example.com</td>
        </tr>
        <tr data-status="in-process" data-url="./dashboard.html">
            <td><input type="checkbox" class="checkbox"></td>
            <td class="text-blue-600">Amadei Nowak</td>
            <td><span class="status-badge status-in-process">National Lumber</span></td>
            <td class="text-gray-500">+18891707045</td>
            <td class="text-gray-500">amadei.nowak@example.com</td>
