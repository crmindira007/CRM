@page
@model CRM.Pages.LeadModel
@{
    ViewData["Title"] = "Lead";
    Layout = "~/Pages/Shared/sidebar_head_full.cshtml"; // Path to your custom layout
}

    <div class="container_lead">
        <div class="flex justify-between items-center mb-6">
            <div class="breadcrumb">
                <a href="Dashboard" class="text-2xl font-semibold text-blue-800">Dashboard</a>
                <span class="mx-2 text-gray-500">›</span>
                <span class="text-2xl font-semibold text-blue-800">Lead</span>
            </div>

            <button class="button" onclick="window.location.href='CreateLead'"><i class="fas fa-plus"></i> Add Create Lead</button>
        </div>
        <div class="table-container_lead">
