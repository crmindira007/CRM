@page
@model CRM.Pages.CreateAccountModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Pages/Shared/sidebar_head_full.cshtml"; // Keeping your original layout
}
    <div class="container">
        <div class="flex items-center justify-between mb-6">
            <div class="flex items-center mb-4 breadcrumb">
                <a href="dashboard" class="text-2xl font-semibold text-blue-800">Dashboard</a>
                <span class="mx-2 text-gray-500">›</span>
                <a href="Accounts" class="text-2xl font-semibold text-blue-800">Account</a>
                <span class="mx-2 text-gray-500">›</span>
                <span class="text-2xl font-semibold text-gray-700">Create</span>
            </div>
            <div class="flex items-center space-x-2">
                <button type="submit" form="accountForm" class="bg-blue-500 text-white px-4 py-2 rounded-full shadow-md hover:shadow-lg transition duration-300">Save</button>
                <button type="button" class="bg-gray-200 text-gray-700 px-4 py-2 rounded shadow-md hover:shadow-lg transition duration-300" onclick="window.location.href='Lead';">Cancel</button>
                <div class="relative">
                    <button class="button_edit" onclick="toggleDropdown()">
                        <i class="fas fa-ellipsis-h"></i>
                    </button>
                    <div class="dropdown_edit" id="dropdown_edit">
                        <a href="#" class="dropdown_edit_a">Save and Continue Editing</a>
                        <a href="#" class="dropdown_edit_a">Save and New</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex flex-col lg:flex-row">
            <div class="form-section flex-1">
                <h2>Overview</h2>
                <form method="post" id="accountForm">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label>Username *</label>
                            <input type="text" asp-for="NewAccount.Username" class="border p-2 rounded w-full" required>
                        </div>
                        <div>
                            <label>Email *</label>
                            <input type="email" asp-for="NewAccount.Email" class="border p-2 rounded w-full" required>
                        </div>
                        <div>
                            <label>Password *</label>
                            <input type="password" asp-for="NewAccount.Password" class="border p-2 rounded w-full" required>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-red-500">@Model.ErrorMessage</div>
        }
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="text-green-500">@Model.SuccessMessage</div>
        }
    </div>

    <script src="~/js/createlead.js"></script>
