@page
@model IndexModel
@{
    ViewData["Title"] = "CRM";
}

<section class="main-container d-flex align-items-center bg-white p-5 rounded position-relative">
    <div class="container">
        <div class="row align-items-center">
            <!-- Left Section (Smaller Text Area) -->
            <div class="col-md-4 text-left">
                <h1 class="banner-text display-4 font-weight-bold text-primary">
                    <span class="gradient-text">Build Stronger Connections,</span><br>
                    <span class="gradient-text2">Close More Deals!</span>
                </h1>
                <p class="text-muted lead font-italic">
                    Boost productivity and streamline customer relationships with
                    <span class="cursive font-weight-bold text-dark">our powerful CRM solution.</span>
                </p>
                <button class="btn btn-success px-4 py-2 mt-2">Sign Up for Free</button>
            </div>

            <!-- Right Section (Larger Image, Positioned Correctly) -->
            <div class="col-md-8 text-center position-relative">
                <img src="~/img/banner_img.png" alt="CRM Illustration" class="img-fluid main-image">
            </div>
        </div>
    </div>

    <!-- Non-Interfering Floating Vectors (Background Layer) -->
    <img src="~/img/vector1 (1).png" class="floating-vector vector-1" alt="Vector Shape">
    <img src="~/img/vector2.png" class="floating-vector vector-3" alt="Vector Shape">
</section>



<!-- CRM Features Section -->
<section class="crm-features py-5">
    <div class="container text-center position-relative">
        <!-- Non-Interfering Floating Vectors (Background Layer) -->
        <img src="~/img/vector3.png" class="floating-vector vector-2" style="width: 300px;" alt="Vector Shap">

        <!-- Section Heading -->
        <h2 class="section-title">🚀 Elevate Your Business with <span class="cursive highlight">Next-Gen CRM</span></h2>
        <p class="section-description">
            Powerful tools to streamline sales, automate tasks, and build meaningful customer relationships.
        </p>

        <!-- Features Grid -->
        <div class="row mt-5">
            <!-- Feature 1 -->
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <img src="~/img/Lead Management.png" alt="Lead Management Icon" class="logo-icon">
                    </div>
                    <h4 class="feature-title">Lead Management</h4>
                    <p class="feature-description">Track and nurture leads with ease, boosting your conversions.</p>
                </div>
            </div>

            <!-- Feature 2 -->
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <img src="~/img/workflow automation.png" alt="AI-Powered Automation Icon" class="logo-icon">
                    </div>
                    <h4 class="feature-title">AI-Powered Automation</h4>
                    <p class="feature-description">Automate repetitive tasks and focus on closing deals.</p>
                </div>
            </div>

            <!-- Feature 3 -->
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <img src="~/img/real-time.png" alt="Real-Time Analytics Icon" class="logo-icon">
                    </div>
                    <h4 class="feature-title">Real-Time Analytics</h4>
                    <p class="feature-description">Gain deep insights and track business performance in real-time.</p>
                </div>
            </div>

            <!-- Feature 4 -->
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <img src="~/img/network.png" alt="Omnichannel Communication Icon" class="logo-icon">
                    </div>
                    <h4 class="feature-title">Omnichannel Communication</h4>
                    <p class="feature-description">Engage with customers through email, SMS, and social media.</p>
                </div>
            </div>

            <!-- Feature 5 -->
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <img src="~/img/-mobile access.png" alt="Mobile-Friendly Access Icon" class="logo-icon">
                    </div>
                    <h4 class="feature-title">Mobile-Friendly Access</h4>
                    <p class="feature-description">Manage your CRM from anywhere with seamless mobile support.</p>
                </div>
            </div>

            <!-- Feature 6 -->
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <img src="~/img/Enterprise.png" alt="Enterprise-Grade Security Icon" class="logo-icon">
                    </div>
                    <h4 class="feature-title">Enterprise-Grade Security</h4>
                    <p class="feature-description">Your data is encrypted and protected with top-tier security.</p>
                </div>
            </div>
        </div>
    </div>
</section>





