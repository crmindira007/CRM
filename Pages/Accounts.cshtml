@page
@model CRM.Pages.AccountsModel
@{
    ViewData["Title"] = "Accounts";
    Layout = "~/Pages/Shared/sidebar_head_full.cshtml";
}

<div class="container">
    <div class="flex justify-between items-center mb-6">
        <div class="breadcrumb">
            <a href="Dashboard" class="text-2xl font-semibold text-blue-800">Dashboard</a>
            <span class="mx-2 text-gray-500">›</span>
            <span class="text-2xl font-semibold text-blue-800">Accounts</span>
        </div>
        <button class="button" onclick="window.location.href='CreateAccount'">
            <i class="fas fa-plus"></i> Add Account
        </button>
    </div>
    <div class="table-container">
        <div class="table-header">
            <div class="flex items-center space-x-2">
                <div>
                    <button class="button-delete" id="deleteButton">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
                <div class="search-bar">
                    <input type="text" placeholder="Search" id="searchInput">
                    <i class="fas fa-search"></i>
                </div>
            </div>
            <div class="text-gray-500">
                Showing @Model.Accounts.Count accounts
            </div>
        </div>
        @if (Model.Accounts.Count > 0)
        {
            <table class="table" id="accountsTable">
                <thead>
                    <tr>
                        <th><input type="checkbox" onclick="toggleCheckboxes(this)"></th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Created At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model.Accounts)
                    {
                        <tr>
                            <td><input type="checkbox" class="checkbox"></td>
                            <td class="text-blue-600">@account.Username</td>
                            <td class="text-gray-500">@account.Email</td>
                            <td class="text-gray-500">@account.CreatedAt</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center text-gray-500 py-6">No records found</div>
        }
    </div>
</div>

<script src="~/js/account.js"></script>
