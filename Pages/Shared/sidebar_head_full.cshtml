<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css">
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet">
    <link href="~/css/contact.css" rel="Stylesheet">
    <link rel="stylesheet" href="~/css/lead.css">
    <link href="~/css/account.css" rel="Stylesheet" />
    <link rel="stylesheet" href="~/css/dashboard.css">
    <link rel="stylesheet" href="~/css/email.css">
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet" asp-append-version="true">
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js" asp-append-version="true"></script>
    <!-- SweetAlert for Popups -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" asp-append-version="true"></script>
</head>

<body>
    <!--Sidebar-->
    <div class="sidebar" id="sidebar">
        <button class="tab icon text-gray-600" onclick="toggleSidebar()">
            <i class="fas fa-bars"></i>
            <span>Menu</span>
        </button>
        <button class="tab icon text-gray-500" onclick="window.location.href='Dashboard';">
            <i class="fas fa-home"></i>
            <span>Home</span>
        </button>
        <button class="tab icon text-gray-600" onclick="window.location.href='Lead';">
            <i class="fas fa-user"></i>
            <span>Lead</span>
        </button>
        <button class="tab icon text-gray-600" onclick="window.location.href='Contact';">
            <i class="fas fa-id-badge"></i>
            <span>Contact</span>
        </button>

        <button class="tab icon text-gray-600"
                onclick="window.location.href='Accounts';">
            <i class="fas fa-building"></i>
            <span>Accounts</span>
        </button>
        <button class="tab icon text-gray-600" onclick="window.location.href='Email';">
            <i class="fas fa-envelope"></i>
            <span>Mail</span>
        </button>

    </div>
    <!-- dash header -->
    <div class="main-content flex-1 transition-all duration-300 ml-5 p-4">
        <div class="header flex justify-between items-center mb-3 p-3 bg-gray-100 shadow-sm rounded-lg relative">
            <div class="flex items-center space-x-4">
                <h1 class="text-xl font-bold text-gray-700">Dashboard</h1>
            </div>
            <div class="flex items-center space-x-4 relative">
                <div class="relative">
                    <div class="dropdown absolute right-0 mt-2 w-48 bg-white shadow-lg rounded-lg hidden"
                         id="add-dropdown">
                        <div class="p-4">
                            <a class="block text-gray-700 py-2 rounded hover:bg-gray-100" href="createlead.html">
                                <i class="fas fa-user mr-2"></i>Lead
                            </a>
                            <a class="block text-gray-700 py-2 rounded hover:bg-gray-100" href="createcontact2.html">
                                <i class="fas fa-address-book mr-2"></i>Contact
                            </a>
                            <a class="block text-gray-700 py-2 rounded hover:bg-gray-100" href="createaccount.html">
                                <i class="fas fa-building mr-2"></i>Account
                            </a>
                        </div>
                    </div>
                </div>
                <div class="relative">
                    <i class="fas fa-bell text-gray-600 text-2xl cursor-pointer" id="notification-icon"></i>
                    <div class="dropdown absolute right-0 mt-2 w-48 bg-white shadow-lg rounded-lg hidden"
                         id="notification-dropdown">
                        <div class="p-4">
                            <h2 class="text-lg font-bold">
                                Notifications
                                &amp; Updates
                            </h2>
                            <p class="text-gray-500 text-center">
                                No
                                notifications
                            </p>
                        </div>
                    </div>
                </div>
                <div class="relative">
                    <img alt="User profile picture" class="profile-icon rounded-full cursor-pointer" height="40"
                         id="profile-icon"
                         src="https://storage.googleapis.com/a1aa/image/sxE-XrOpBbjPqA--uQRqycd9qGrxxgznO9RYTNs7hdw.jpg"
                         width="40" />
                    <div class="profile-dropdown absolute right-0 mt-2 w-48 bg-white shadow-lg rounded-lg hidden"
                         id="profile-dropdown">
                        <div class="p-4">
                            <a class="block text-gray-700 py-2 rounded hover:bg-gray-100"
                               href="profile.html">Profile</a>
                            <a class="block text-gray-700 py-2 rounded hover:bg-gray-100" href="login.html">Sign Out</a>
                        </div>
                    </div>
                </div>
                <span class="hidden sm:inline text-gray-600">user</span>
            </div>
        </div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/js/dashboard.js"></script>
</body>

</html>