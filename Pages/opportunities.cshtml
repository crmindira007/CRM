@page
@model CRM.Pages.LeadModel
@{
    ViewData["Title"] = "Opportunities";
    Layout = null; // Path to your custom layout
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leads</title>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css">
    <link rel="stylesheet" href="~/css/lead.css">

</head>
<body>
    <div class="container">
        <div class="flex justify-between items-center mb-6">
            <div class="breadcrumb">
                <a href="Dashboard" class="text-2xl font-semibold text-blue-800">Dashboard</a>
                <span class="mx-2 text-gray-500">›</span>
                <span class="text-2xl font-semibold text-blue-800">Opportunities</span>
            </div>

            <button class="button" onclick="window.location.href='CreateLead'"><i class="fas fa-plus"></i> Add Opportunities</button>
        </div>
        <div class="table-container">
            <div class="table-header">
                <div class="flex items-center space-x-2">
                    <div>
                        <button class="button-delete" id="deleteButton">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                    <select id="statusFilter">
                        <option value="all">All</option>
                        <option value="in-process">In Process</option>
                        <option value="new">New</option>
                        <option value="recycled">Recycled</option>
                        <option value="assigned">Assigned</option>
                        <option value="dead">Dead</option>
                        <option value="converted">Converted</option>
                    </select>


                    <div class="search-bar">
                        <input type="text" placeholder="Search" id="searchInput">
                        <i class="fas fa-search"></i>
                    </div>
                </div>
                <div class="text-gray-500">1-20 / 20</div>
            </div>
            <table class="table" id="leadsTable">
                <thead>
                    <tr>
                        <th><input type="checkbox" onclick="toggleCheckboxes(this)"></th>
                        <th>Name</th>
                        <th>Account Name</th>
                        <th>sales stage</th>
                    </tr>
                </thead>
                <tbody>
                    <tr data-status="in-process" data-url="./leadsav.html">
                        <td><input type="checkbox" class="checkbox"></td>
                        <td class="text-blue-600">Cumberland Trails Inc - 500 units</td>
                        <td><span class="status-badge status-in-process">Cumberland Trails Inc</span></td>
                        <td class="text-gray-500">Proposal/Price Quote</td>
                    </tr>
                    <tr data-status="new" data-url="./dashboard.html">
                        <td><input type="checkbox" class="checkbox"></td>
                        <td class="text-blue-600">Rubble Group Inc - 7500 units</td>
                        <td><span class="status-badge status-new">Rubble Group Inc</span></td>
                        <td class="text-gray-500">Negotiation/Review</td>
                    </tr>
        </tbody>
        </table>
        </div>
    </div>
    <script src="~/js/lead.js"></script>
    </body>
    </html>