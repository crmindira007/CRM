    </div>

    <script>
        function openEmail(url) {
            document.getElementById('emailContent').src = url;
        }

        // Add active class to clicked sidebar_email item
        document.querySelectorAll('.sidebar_email-item').forEach(item => {
            item.addEventListener('click', function() {
                document.querySelectorAll('.sidebar_email-item').forEach(i => {
                    i.classList.remove('active');
                });
                this.classList.add('active');
            });
        });
    </script>
</body>
</html>