@page
@model CRM.Pages.EmailModel
@{
    ViewData["Title"] = "Email";
    Layout = "~/Pages/Shared/sidebar_head_full.cshtml"; // Path to your custom layout
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Client</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        body {
            height: 100vh;
            background-color: #f5f5f5;
        }

        .main-content {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .header_email {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 20px;
            background-color: white;
            border-bottom: 1px solid #e0e0e0;
            padding-left: 950px;
        }

            .header_email > div {
                display: flex;
                align-items: center;
                gap: 15px;
            }

        button {
            padding: 8px 16px;
            border: none;
            background: none;
            cursor: pointer;
            font-weight: 500;
            border-radius: 4px;
        }

            button:hover {
                background-color: #f0f0f0;
            }

        a {
            padding: 8px 16px;
            background-color: #1a73e8;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            font-weight: 500;
        }

            a:hover {
                background-color: #1765cc;
            }

        i {
            cursor: pointer;
            color: #5f6368;
            font-size: 16px;
        }

        .flex-1 {
            flex: 1;
            display: flex;
            overflow: hidden;
        }

        /* sidebar_email styles */
        .sidebar_email {
            width: 220px;
            background-color: white;
            border-right: 1px solid #e0e0e0;
            padding: 20px 0;
            display: flex;
            flex-direction: column;
                margin-top: 10px;
        }

        .sidebar_email-item {
            display: flex;
            align-items: center;
            padding: 12px 20px;
            cursor: pointer;
            color: #202124;
        }

            .sidebar_email-item:hover {
                background-color: #f1f3f4;
            }

            .sidebar_email-item i {
                margin-right: 15px;
                color: #5f6368;
                width: 20px;
                text-align: center;
            }

            .sidebar_email-item.active {
                background-color: #e8f0fe;
                color: #1a73e8;
                font-weight: 600;
            }

                .sidebar_email-item.active i {
                    color: #1a73e8;
                }

        .sidebar_email-divider {
            height: 1px;
            background-color: #e0e0e0;
            margin: 10px 0;
        }

        .sidebar_email-label {
            padding: 8px 20px;
            font-size: 0.75rem;
            color: #5f6368;
            text-transform: uppercase;
            font-weight: 500;
        }

        .email-list {
            width: 300px;
            overflow-y: auto;
            background-color: white;
            border-right: 1px solid #e0e0e0;
            padding: 10px 0;
            margin-left: 15px;
            margin-top: 10px;
        }

            .email-list > div {
                margin-bottom: 20px;
            }

        .text-sm {
            font-size: 0.875rem;
            padding: 0 15px;
        }

        .font-semibold {
            font-weight: 600;
        }

        .text-blue-600 {
            color: #1a73e8;
        }

        .mb-2 {
            margin-bottom: 8px;
        }

        .email-item {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            gap: 12px;
            cursor: pointer;
            border-bottom: 1px solid #f0f0f0;
        }

            .email-item:hover {
                background-color: #f5f5f5;
                box-shadow: inset 0 -1px 0 #e0e0e0;
            }

            .email-item img {
                border-radius: 50%;
                object-fit: cover;
            }

            .email-item > div:nth-child(2) {
                flex: 1;
                min-width: 0;
            }

            .email-item > div:nth-child(3) {
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                max-width: 150px;
            }

        .text-xs {
            font-size: 0.75rem;
        }

        .text-gray-500 {
            color: #5f6368;
        }

        .text-gray-700 {
            color: #3c4043;
        }

        .email-content {
            flex: 1;
            background-color: white;
        }

            .email-content iframe {
                width: 100%;
                height: 100%;
                border: none;
            }

        .mr-4 {
            margin-right: 16px;
        }

        .fa-pen:before{
            content: "\f304";
            color:white;
        }
    </style>
</head>
<body>
