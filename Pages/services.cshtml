@page
@model CRM.Pages.servicesModel
@{
    ViewData["Title"] = "services";
}

<div class="container py-5 mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">Pricing</h1>
        <p class="fs-5 text-muted">Find the perfect plan that suits your needs.</p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card2 shadow-sm border-light h-100">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="fw-bold mb-0">Free</h4>
                </div>
                <div class="card-body text-center">
                    <h1 class="card-title">₹0<small class="text-muted">/mo</small></h1>
                    <ul class="list-unstyled my-3">
                        <li>✔ 3 users included</li>
                        <li>✔ Email support</li>
                        <li>✔ Help center access</li>
                    </ul>
                    <a href="/signup" class="btn cursive btn-outline-primary w-100">Sign up for free</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card2 shadow-sm border-light h-100">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="fw-bold mb-0">Pro</h4>
                </div>
                <div class="card-body text-center">
                    <h1 class="card-title">₹1599<small class="text-muted">/mo</small></h1>
                    <ul class="list-unstyled my-3">
                        <li>✔ 10 users included</li>
                        <li>✔ Priority support</li>
                        <li>✔ Help center access</li>
                    </ul>
                    <button class="btn btn-primary w-100">Get started</button>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card2 shadow-sm border-light h-100">
                <div class="card-header-black bg-dark text-white text-center py-3">
                    <h4 class="fw-bold mb-0">Enterprise</h4>
                </div>
                <div class="card-body text-center">
                    <h1 class="card-title">₹2999<small class="text-muted">/mo</small></h1>
                    <ul class="list-unstyled my-3">
                        <li>✔ 30 users included</li>
                        <li>✔ Phone & email support</li>
                        <li>✔ Advanced security</li>
                    </ul>
                    <button class="btn btn-dark w-100">Get started</button>
                </div>
            </div>
        </div>
    </div>

    <h2 class="text-center mt-5 mb-4 text-dark">Compare Plans</h2>

    <div class="table-responsive">
        <table class="table table-bordered text-center">
            <thead class="text-white">
                <tr>
                    <th style="width: 34%;"></th>
                    <th style="width: 22%;">Free</th>
                    <th style="width: 22%;">Pro</th>
                    <th style="width: 22%;">Enterprise</th>
                </tr>
            </thead>
            <tbody class="text-dark">
                <tr>
                    <th class="text-start">Public</th>
                    <td>✔</td>
                    <td>✔</td>
                    <td>✔</td>
                </tr>
                <tr>
                    <th class="text-start">Private</th>
                    <td>-</td>
                    <td>✔</td>
                    <td>✔</td>
                </tr>
                <tr>
                    <th class="text-start">Permissions</th>
                    <td>✔</td>
                    <td>✔</td>
                    <td>✔</td>
                </tr>
                <tr>
                    <th class="text-start">Sharing</th>
                    <td>-</td>
                    <td>✔</td>
                    <td>✔</td>
                </tr>
                <tr>
                    <th class="text-start">Unlimited members</th>
                    <td>-</td>
                    <td>✔</td>
                    <td>✔</td>
                </tr>
                <tr>
                    <th class="text-start">Extra security</th>
                    <td>-</td>
                    <td>-</td>
                    <td>✔</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

